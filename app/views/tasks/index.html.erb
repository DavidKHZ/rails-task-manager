<h1>Tasks</h1>

<% if (@tasks.length > 0) %>
  <ul>
  <% @tasks.each do |task| %>
    <li>
      <%= check_box_tag task.title, task.id, task.completed, {id: task.id} %>
      <a href="tasks/<%= task.id %>"><%= task.title %></a>
      <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
        <i class="fa-regular fa-trash-can"></i>
      <% end %>
    </li>
  <% end %>
  </ul>
<% else %>
  <%= "No task to be displayed at the moment" %>
<% end %>

<p><a href="tasks/new"><i class="fa-solid fa-plus"></i> Add a new task</a></p>
